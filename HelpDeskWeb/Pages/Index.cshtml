@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard General";
    // Mock de datos (En tu caso vendrían del Modelo)
    var pendingTickets = 12;
    var openTickets = 5;
    var totalUsers = 142;
    var satisfaction = 94;
}

<div class="mb-8 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">
            Hola, @User.Identity?.Name 👋
        </h2>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
            Aquí tienes el resumen de actividad de hoy, @DateTime.Now.ToString("dd MMMM yyyy").
        </p>
    </div>
    <div class="flex gap-3">
        <a asp-page="/Tickets/Create" class="btn-primary shadow-lg shadow-blue-500/30">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Nuevo Ticket
        </a>
    </div>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    
    <div class="card p-5 border-l-4 border-l-yellow-500">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Pendientes</p>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@pendingTickets</h3>
            </div>
            <div class="p-2 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg text-yellow-600 dark:text-yellow-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
        </div>
        <div class="mt-4 flex items-center text-xs text-gray-400">
            <span class="text-red-500 flex items-center font-medium mr-2">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                +2 nuevos
            </span>
            desde ayer
        </div>
    </div>

    <div class="card p-5 border-l-4 border-l-blue-500">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">En Proceso</p>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@openTickets</h3>
            </div>
            <div class="p-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-blue-600 dark:text-blue-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path></svg>
            </div>
        </div>
        <div class="mt-4 flex items-center text-xs text-gray-400">
            <span class="text-green-500 flex items-center font-medium mr-2">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path></svg>
                -10%
            </span>
            carga de trabajo
        </div>
    </div>

    <div class="card p-5 border-l-4 border-l-purple-500">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Usuarios Activos</p>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@totalUsers</h3>
            </div>
            <div class="p-2 bg-purple-50 dark:bg-purple-900/20 rounded-lg text-purple-600 dark:text-purple-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
            </div>
        </div>
        <div class="mt-4 flex items-center text-xs text-gray-400">
            <span class="text-gray-500 font-medium">Total registrados</span>
        </div>
    </div>

    <div class="card p-5 border-l-4 border-l-green-500">
        <div class="flex justify-between items-start">
            <div>
                <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Satisfacción</p>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@satisfaction%</h3>
            </div>
            <div class="p-2 bg-green-50 dark:bg-green-900/20 rounded-lg text-green-600 dark:text-green-400">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
        </div>
         <div class="mt-4 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5">
            <div class="bg-green-500 h-1.5 rounded-full" style="width: @satisfaction%"></div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <div class="lg:col-span-2 space-y-4">
        <div class="flex items-center justify-between">
            <h3 class="text-lg font-bold text-gray-800 dark:text-white">Tickets Recientes</h3>
            <a href="#" class="text-sm text-blue-600 hover:text-blue-500 font-medium">Ver todos &rarr;</a>
        </div>

        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                    <thead class="text-xs text-gray-500 uppercase bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-700">
                        <tr>
                            <th class="px-6 py-3 font-medium">Asunto</th>
                            <th class="px-6 py-3 font-medium">Solicitante</th>
                            <th class="px-6 py-3 font-medium">Estado</th>
                            <th class="px-6 py-3 font-medium text-right">Fecha</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">Error en Login</td>
                            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Juan Pérez</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300">
                                    Crítico
                                </span>
                            </td>
                            <td class="px-6 py-4 text-gray-400 text-right">Hace 2h</td>
                        </tr>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">Solicitud de Licencia</td>
                            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Ana Gómez</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                    Nuevo
                                </span>
                            </td>
                            <td class="px-6 py-4 text-gray-400 text-right">Hace 5h</td>
                        </tr>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">Pantalla Azul</td>
                            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Carlos Ruiz</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                                    Resuelto
                                </span>
                            </td>
                            <td class="px-6 py-4 text-gray-400 text-right">Ayer</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="space-y-4">
        <h3 class="text-lg font-bold text-gray-800 dark:text-white">Estado del Soporte</h3>
        
        <div class="card p-6 space-y-6">
            <div>
                <div class="flex justify-between mb-1">
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">SLA Cumplido</span>
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">92%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                    <div class="bg-blue-600 h-2 rounded-full" style="width: 92%"></div>
                </div>
            </div>

            <div>
                <div class="flex justify-between mb-1">
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Carga del Servidor</span>
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">45%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                    <div class="bg-green-500 h-2 rounded-full" style="width: 45%"></div>
                </div>
            </div>

            <div>
                <div class="flex justify-between mb-1">
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Agentes Disponibles</span>
                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">3/8</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                    <div class="bg-yellow-400 h-2 rounded-full" style="width: 35%"></div>
                </div>
            </div>
            
            <div class="pt-4 border-t border-gray-100 dark:border-gray-700">
                 <button class="w-full btn-secondary justify-center text-xs">
                    Ver Reporte Completo
                 </button>
            </div>
        </div>
    </div>
</div>