@page
@model HelpDeskWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Usamos layout null para login limpio o usa tu _Layout
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HelpDesk</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">HelpDesk</h2>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4 text-center"></div>

            <div class="mb-4">
                <label asp-for="Input.Username" class="block text-gray-700 text-sm font-bold mb-2">Usuario</label>
                <input asp-for="Input.Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="usuario@ejemplo.com" />
                <span asp-validation-for="Input.Username" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-6">
                <label asp-for="Input.Password" class="block text-gray-700 text-sm font-bold mb-2">Contraseña</label>
                <input asp-for="Input.Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="******************" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs italic"></span>
                <a href="Register" class="text-sm text-blue-600 hover:text-blue-800 transition-colors duration-200 ">¿No tienes cuenta? Registrate</a>
            </div>

            <div class="flex items-center justify-between">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150">
                    Ingresar
                </button>
            </div>
        </form>
    </div>

</body>
</html>