@using Microsoft.AspNetCore.Identity
@using HelpDesk.Core.Modules.Users.Entities
@inject SignInManager<AppUser> SignInManager

@{
    // Obtenemos la ruta actual una sola vez
    string current = ViewContext.RouteData.Values["page"]?.ToString() ?? "";

    // 1. Helper para los ITEMS INDIVIDUALES (Hijos o items raíz únicos)
    string GetLinkClass(string pageRoute, bool isChild = false)
    {
        bool isActive = current == pageRoute;
        
        // Base: si es hijo tiene más padding a la izquierda (pl-11) para jerarquía
        string baseClass = isChild 
            ? "flex w-full items-center gap-2 py-2 pl-11 pr-3 text-sm font-medium rounded-md transition-colors duration-200"
            : "flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md transition-colors duration-200";

        if (isActive)
        {
            // Estilo Activo
            return $"{baseClass} bg-blue-50 text-blue-600 dark:bg-blue-900/20 dark:text-blue-400";
        }
        else
        {
            // Estilo Inactivo
            return $"{baseClass} text-slate-600 hover:bg-slate-100 hover:text-slate-900 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white";
        }
    }

    // 2. Helper para saber si un GRUPO PADRE debe estar abierto
    // (Si la URL actual empieza con la ruta del padre, se queda abierto)
    bool IsGroupOpen(string sectionPrefix)
    {
        return current.StartsWith(sectionPrefix, StringComparison.OrdinalIgnoreCase);
    }
}

<aside class="w-64 h-screen flex flex-col sticky top-0 border-r border-slate-200 bg-white dark:bg-slate-900 dark:border-slate-800 transition-colors duration-300">
    
    <div class="h-16 flex items-center px-6 border-b border-slate-200 dark:border-slate-800">
        <div class="flex items-center gap-2 font-bold text-xl text-slate-800 dark:text-white">
            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center text-white shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
            </div>
            HelpDesk <span class="text-xs align-top text-blue-500 font-mono ml-1 mt-1">Pro</span>
        </div>
    </div>

    <nav class="flex-1 px-3 py-6 space-y-1 overflow-y-auto no-scrollbar">

        <a asp-page="/Index" class="@GetLinkClass("/Index")">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
            Inicio
        </a>

        @if (User.IsInRole("Admin") || User.IsInRole("Agent"))
        {
            <div class="pt-6 pb-2 px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                Operaciones
            </div>

            <a asp-page="/Agent/Assigned" class="@GetLinkClass("/Agent/Assigned")">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path></svg>
                Tickets
            </a>
        }

        @if (User.IsInRole("Admin"))
        {
            <div class="pt-6 pb-2 px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">
                Configuración
            </div>

            <details class="group" @(IsGroupOpen("/Admin") ? "open" : "")>
                
                <summary class="flex items-center justify-between w-full px-3 py-2 text-sm font-medium rounded-md text-slate-600 hover:bg-slate-100 hover:text-slate-900 dark:text-slate-400 dark:hover:bg-slate-800 dark:hover:text-white cursor-pointer list-none select-none transition-colors duration-200">
                    <div class="flex items-center gap-3">
                        <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        <span>Administración</span>
                    </div>
                    <svg class="w-4 h-4 text-slate-400 transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </summary>

                <div class="mt-1 space-y-1">
                    <a asp-page="/Admin/Users" class="@GetLinkClass("/Admin/Users", true)">
                        Usuarios
                    </a>
                    <a asp-page="/Admin/Reports" class="@GetLinkClass("/Admin/Reports", true)">
                        Reportes
                    </a>
                    <a asp-page="/Admin/Settings" class="@GetLinkClass("/Admin/Settings", true)">
                        Ajustes Globales
                    </a>
                </div>
            </details>
        }

        <div class="pt-6 pb-2 px-3 text-xs font-semibold text-slate-400 uppercase tracking-wider">
            Mi Espacio
        </div>
        
        <a asp-page="/Customer/MyTickets" class="@GetLinkClass("/Customer/MyTickets")">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            Mis Tickets
        </a>

    </nav>

    <div class="p-4 border-t border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-slate-900/50">
        <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-full bg-white dark:bg-slate-700 border border-slate-200 dark:border-slate-600 flex items-center justify-center text-slate-600 dark:text-slate-300 font-bold text-xs shadow-sm">
                @User.Identity.Name?.Substring(0,1).ToUpper()
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-slate-900 dark:text-white truncate">
                    @User.Identity.Name
                </p>
                <p class="text-xs text-slate-500 dark:text-slate-400 truncate">
                    @User.FindFirst("Department")?.Value
                </p>
            </div>
        </div>
    </div>
</aside>

<style>
    summary::-webkit-details-marker {
        display: none;
    }
</style>